@{
    Layout = "_DefaultLayout";
    ViewData["Title"] = "Register";
}
@model CreateUserCommand;
<div class="container ">
    <div class="row mt-3">
        <div class="col"></div>
        <div class="col-8  px-5 py-1 text-light rounded-4 " style="background-color: rgb(44, 68, 64);">
            <h3 class="m-3 px-5"><strong>Register</strong></h3>
            <form method="post" asp-action="Register">
                <div class="mb-3">
                    <label for="FullName" class="form-label mx-3"><strong>FullName</strong></label>
                    <input type="text" name="FullName" class="form-control" id="FullName" placeholder="Enter FullName">
                </div>
                <div class="mb-3">
                    <label for="UserName" class="form-label mx-3"><strong>UserName</strong></label>
                        <input type="text" name="UserName" class="form-control" id="UserName" placeholder="Enter UserName">
                </div>
                <div class="mb-3">
                    <label for="PhoneNumber" class="form-label mx-3"><strong>Phone Number</strong></label>
                        <input type="text" name="PhoneNumber"  value="+998" class="form-control" id="PhoneNumber" placeholder="Enter Your Phone Number">
                </div>
                <div class="mb-3">
                    <label for="Password" class="form-label mx-3"><strong>Password</strong></label>
                        <input type="password" name="Password"  class="form-control" id="Password" placeholder="Enter Password">
                </div>
                <div class="mb-3">
                    <label for="ConfirmPassword" class="form-label mx-3"><strong>Confirm Password</strong></label>
                        <input type="password" name="ConfirmPassword"  class="form-control" id="ConfirmPassword" placeholder="Enter Confirm Password">
                </div>
                <div class="row mt-3 mb-4 mx-2">
                    <div class="col-5">
                        <button type="submit" class="btn btn-success "><strong>Register</strong></button>
                    </div>
                    <div class="col-7">
                        <p class="my-2"><strong>Have already an account?</strong> <a class="text-info" href="#"><strong>Login here</strong></a></p>
                    </div>
                </div>

            </form>
        </div>
        <div class="col"></div>
    </div>
</div>